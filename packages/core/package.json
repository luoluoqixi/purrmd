{
  "name": "purrmd",
  "version": "0.0.8",
  "description": "purrmd",
  "type": "module",
  "private": false,
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "author": "luoluoqixi",
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "build-api": "npx typedoc src/index.ts --out ../../app/docs/apis/&&npx typedoc src/index.ts --out ../../app/docs/zh/apis/",
    "format": "prettier --write .",
    "lint": "eslint ./src --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "standard-version",
    "watch": "vite build --watch"
  },
  "peerDependencies": {
    "@codemirror/autocomplete": "^6.18.6",
    "@codemirror/commands": "^6.8.1",
    "@codemirror/highlight": "^0.19.8",
    "@codemirror/lang-markdown": "^6.3.3",
    "@codemirror/language": "^6.11.2",
    "@codemirror/language-data": "^6.5.1",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.1",
    "@lezer/markdown": "^1.4.3"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./dist/*": {
      "types": "./dist/*",
      "default": "./dist/*"
    }
  },
  "keywords": [
    "markdown",
    "codemirror",
    "wysiwyg"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/luoluoqixi/purrmd"
  },
  "bugs": {
    "url": "https://github.com/luoluoqixi/purrmd/issues"
  },
  "homepage": "https://github.com/luoluoqixi/purrmd#readme",
  "files": [
    "dist",
    "src",
    "README.md",
    "README_zh.md",
    "LICENSE"
  ],
  "packageManager": "pnpm@9.15.0",
  "node": ">=20.0.0",
  "dependencies": {
    "@uiw/codemirror-theme-dracula": "^4.25.1",
    "@uiw/codemirror-theme-vscode": "^4.25.1",
    "ts-deepmerge": "^7.0.3"
  },
  "devDependencies": {
    "typedoc": "^0.28.9",
    "typedoc-plugin-markdown": "^4.8.0",
    "standard-version": "^9.5.0"
  },
  "standard-version": {
    "changelogFile": "CHANGELOG.md",
    "skip": {
      "commit": true,
      "tag": false
    }
  }
}
