{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "target": "esnext",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "extends": ["./tsconfig.node.json"],
}
