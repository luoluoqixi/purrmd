{
  "name": "purrmd",
  "description": "purrmd",
  "type": "module",
  "private": true,
  "author": "luoluoqixi",
  "license": "MIT",
  "scripts": {
    "build": "pnpm run lint && pnpm --filter=purrmd run build",
    "build-docs": "pnpm build&&pnpm build-apis&&pnpm --filter=purrmd-docs run build",
    "build-apis": "pnpm --filter=purrmd run build-api",
    "dev": "concurrently \"pnpm watch-purrmd\" \"pnpm dev-demo\"",
    "dev-demo": "pnpm --filter=purrmd-demo run dev",
    "dev-docs": "concurrently \"pnpm watch-purrmd\" \"pnpm --filter=purrmd-docs run dev\"",
    "watch-purrmd": "pnpm --filter=purrmd run watch",
    "format": "prettier --write .",
    "lint": "eslint ./packages --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "pnpm --filter=purrmd run release",
    "npm:publish": "npm publish"
  },
  "devDependencies": {
    "@babel/runtime": "^7.28.3",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24.1.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.6",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-externalize-deps": "^0.9.0"
  },
  "packageManager": "pnpm@9.15.0",
  "node": ">=20.0.0"
}
